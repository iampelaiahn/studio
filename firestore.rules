/**
 * @file Firebase Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and customer-related data,
 * while allowing public read access to product catalogs and gallery images. Admin privileges are
 * granted based on the existence of a document in the `/roles_admin/{userId}` collection.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information. Only the authenticated user can access their own profile.
 * - /cakes/{cakeId}: Stores cake product information. Publicly readable, write access restricted to admins.
 * - /cupcakes/{cupcakeId}: Stores cupcake product information. Publicly readable, write access restricted to admins.
 * - /customers/{customerId}: Stores customer profiles. Only the authenticated user can access their own profile.
 * - /customers/{customerId}/customOrders/{customOrderId}: Stores custom order requests for each customer. Only the customer or an admin can access these orders.
 * - /galleryImages/{galleryImageId}: Stores gallery images. Publicly readable, write access restricted to admins.
 * - /roles_admin/{userId}: Indicates admin role. The existence of a document grants admin privileges.
 *
 * Key Security Decisions:
 * - User listing is disallowed for the /users collection to protect user privacy.
 * - Product catalogs (/cakes, /cupcakes) and gallery images (/galleryImages) are publicly readable.
 * - Admin privileges are determined by the existence of a document in the `/roles_admin/{userId}` collection.
 * - Strict ownership is enforced for customer profiles and custom orders.
 *
 * Denormalization for Authorization:
 * - Admin privileges are checked by verifying the existence of a document in `/roles_admin/{userId}`, avoiding costly `get()` calls in other rules.
 *
 * Structural Segregation:
 * - Private user data (user profiles, custom orders) is stored under user-specific paths (e.g., /users/{userId}, /customers/{customerId}) to enforce clear ownership and access control.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profiles. Only the authenticated user can access their own document.
     * @path /users/{userId}
     * @allow (create, get, update, delete, list): if request.auth.uid == userId
     * @deny (create, get, update, delete, list): if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.auth.uid == userId;
      allow update: if isExistingOwner(userId) && request.auth.uid == userId;
      allow delete: if isExistingOwner(userId) && request.auth.uid == userId;
    }

    /**
     * @description Stores the catalog of cakes. Publicly readable, but write-protected (admin only).
     * @path /cakes/{cakeId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isAdmin()
     * @deny (create, update, delete): if !isAdmin()
     * @principle Allows public read access but restricts writes to admins.
     */
    match /cakes/{cakeId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Stores the catalog of cupcakes. Publicly readable, but write-protected (admin only).
     * @path /cupcakes/{cupcakeId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isAdmin()
     * @deny (create, update, delete): if !isAdmin()
     * @principle Allows public read access but restricts writes to admins.
     */
    match /cupcakes/{cupcakeId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Stores custom orders for each customer. Secured by path-based ownership; accessible only by the customer who owns them or by an admin.
     * @path /customers/{customerId}/customOrders/{customOrderId}
     * @allow (create, get, update, delete, list): if isOwner(customerId) || isAdmin()
     * @deny (create, get, update, delete, list): if !isOwner(customerId) && !isAdmin()
     * @principle Enforces document ownership and admin access for all operations.
     */
    match /customers/{customerId}/customOrders/{customOrderId} {
      allow get: if isOwner(customerId) || isAdmin();
      allow list: if isOwner(customerId) || isAdmin();
      allow create: if (isOwner(customerId) && request.resource.data.customerId == customerId) || isAdmin();
      allow update: if (isExistingOwner(customerId) && request.resource.data.customerId == customerId) || isAdmin();
      allow delete: if (isExistingOwner(customerId) && request.auth.uid == customerId) || isAdmin();
    }

    /**
     * @description Stores customer profiles. Secured by path-based ownership: only the authenticated user can access their customer profile, or an admin.
     * @path /customers/{customerId}
     * @allow (create, get, update, delete, list): if isOwner(customerId) || isAdmin()
     * @deny (create, get, update, delete, list): if !isOwner(customerId) && !isAdmin()
     * @principle Enforces document ownership and admin access for all operations.
     */
    match /customers/{customerId} {
      allow get: if isOwner(customerId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(customerId) && request.auth.uid == customerId;
      allow update: if isExistingOwner(customerId) && request.auth.uid == customerId;
      allow delete: if isExistingOwner(customerId) && request.auth.uid == customerId;
    }

    /**
     * @description Stores gallery images. Publicly readable, but write-protected (admin only).
     * @path /galleryImages/{galleryImageId}
     * @allow (get, list): if true
     * @allow (create, update, delete): if isAdmin()
     * @deny (create, update, delete): if !isAdmin()
     * @principle Allows public read access but restricts writes to admins.
     */
    match /galleryImages/{galleryImageId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description Indicates admin role. The existence of a document grants admin privileges.
     * @path /roles_admin/{userId}
     */
    match /roles_admin/{userId} {
        allow get: if isAdmin();
        allow list: if false;
        allow create: if isAdmin();
        allow update: if false;
        allow delete: if isAdmin();
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}